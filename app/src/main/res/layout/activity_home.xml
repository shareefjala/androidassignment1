<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- TOP HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <!-- Red profile button -->
        <ImageButton
            android:id="@+id/buttonProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_profile_circle"
            android:contentDescription="Profile"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@android:color/transparent" />

        <!-- Greeting text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/buttonProfile"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Guest!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Your Stay, Start Your Journey!"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Notifications button -->
        <ImageButton
            android:id="@+id/buttonNotifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="Notifications"
            android:src="@android:drawable/ic_dialog_info" />
        <!-- replace with your own bell icon later -->

    </RelativeLayout>

    <!-- SEARCH CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#141414"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etSearchHotel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#252525"
            android:hint="Search Hotel"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="#19FF5B" />
    </LinearLayout>

    <!-- PROMO CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="#0F7A3A"
        android:padding="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvPromoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate your previous experiences!"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPromoSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Enjoy discounts when leaving feedback for your previous bookings!"
            android:textColor="#E6FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonViewBookings"
            android:layout_width="96dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:text="Review now!"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:background="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>

    <!-- SECTION TITLE -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Hotels"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- HOTEL LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHotels"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
